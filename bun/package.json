{
  "name": "bitrim",
  "version": "1.0.0",
  "description": "A Blazing-fast, cross-platform Go CLI tool for batch optimizing images and SVG files with high-concurrency processing",
  "author": "zulfikar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zulfikawr/bitrim.git"
  },
  "homepage": "https://github.com/zulfikawr/bitrim#readme",
  "bugs": {
    "url": "https://github.com/zulfikawr/bitrim/issues"
  },
  "keywords": [
    "image-optimization",
    "image-compression",
    "png",
    "jpeg",
    "svg",
    "cli",
    "batch-processing",
    "concurrency",
    "image-processing",
    "asset-optimizer"
  ],
  "bin": {
    "bitrim": "./bin/bitrim"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "engines": {
    "node": ">=12.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "test": "node scripts/test.js",
    "postinstall": "node scripts/postinstall.js",
    "download-binary": "node scripts/download.js",
    "verify": "bun run test && bun run build",
    "publish": "bun run verify && bun publish"
  },
  "preferGlobal": true,
  "files": [
    "bin",
    "scripts",
    "README.md",
    "LICENSE",
    ".npmignore"
  ],
  "publishConfig": {
    "access": "public"
  }
}
